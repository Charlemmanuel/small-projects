        <option>ROG Zephyrus G16</option>
        <option>ROG Zephyrus G14</option>
        <option>ROG Strix SCAR 17 X3D</option>
        <option>ROG Strix G16</option>
        <option>MacBook Pro M3</option>
        <option>MacBook Pro M2</option>
        <option>MacBook Pro M1</option>
        <option>MacBook Air</option>
