          <option>Samsung galaxy S23</option>
           <option>Samsung galaxy S22 ultra</option>
            <option>Samsung galaxy S22+ </option>
             <option>Samsung galaxy S22</option>
    </optgroup>

    <optgroup label="Laptop">
